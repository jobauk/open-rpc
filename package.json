{
  "name": "@snuifstuif/open-rpc",
  "version": "0.3.11",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Snuifstuif/open-rpc.git"
  },
  "bin": {
    "open-rpc": "bin/cli.js"
  },
  "main": "dist/src/index.js",
  "exports": {
    ".": "./dist/src/index.js",
    "./lib": "./dist/lib/index.js"
  },
  "types": "./dist/src/index.d.ts",
  "files": ["dist"],
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist/src --target node && bun build:lib && bun build:types",
    "build:lib": "esbuild ./lib/index.ts --bundle --platform=node --format=cjs --outdir=dist/lib",
    "build:types": "tsc --project ./tsconfig.json",
    "format": "bunx @biomejs/biome format --write .",
    "prepublish": "bun run build",
    "test": "vitest --run --config vitest.config.ts"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.0",
    "@types/bun": "latest",
    "esbuild": "0.23.0",
    "vitest": "^1.6.0"
  },
  "peerDependencies": {
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "openapi-typescript": "^7.4.0"
  }
}
