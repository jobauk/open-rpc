{
  "name": "@snuifstuif/open-rpc",
  "main": "dist/index.js",
  "version": "0.2.0",
  "repository": "https://github.com/Snuifstuif/open-rpc",
  "exports": {
    ".": "./dist/index.js"
  },
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "rm -r dist && bun build ./lib/index.ts --outdir ./dist --target node && bun build:types",
    "build:types": "tsc --project ./tsconfig.json",
    "format": "bunx @biomejs/biome format --write .",
    "prepublish": "bun run build"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.7.3",
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5.3.0"
  }
}
