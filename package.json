{
  "name": "@snuifstuif/open-rpc",
  "main": "dist/index.js",
  "version": "0.2.3",
  "repository": "https://github.com/Snuifstuif/open-rpc",
  "exports": {
    ".": "./dist/index.js"
  },
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "bun build ./lib/index.ts --outdir ./dist --target node && bun build:types",
    "build:types": "tsc --project ./tsconfig.json",
    "format": "bunx @biomejs/biome format --write .",
    "prepublish": "bun run build",
    "test": "vitest --run --config vitest.config.ts"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.0",
    "@types/bun": "latest",
    "vitest": "^1.6.0"
  },
  "peerDependencies": {
    "typescript": "^5.3.0"
  }
}
